<h1>New Entry</h1>

<form action="/entries" method="post">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
  <input type="hidden" name="user_id" value="<%= params["user_id"] %>">

  <p>
    <label for="title_input">Title</label>
    <input type="text" name="title" id="title_input">
  </p>

  <p>
    <label for="description_input">Description</label>
    <input type="text" name="description" id="description_input">
  </p>

  <p>
    <label for="occurred_on_input">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on_input">
  </p>

  <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
  </div>

    <!--
    <div class="mb-3">
      <label for="image_input" class="form-label">Image URL</label>
      <input type="text" name="image" id="image_input" class="form-control">
    </div>
    -->

    <button class="btn btn-primary">Save</button>
    <a href="/places/<%= params["place_id"] %>" class="btn btn-secondary">Cancel</a>


  </form>